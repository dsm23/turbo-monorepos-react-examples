{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "lint:css": {
      "outputs": [".stylelintcache"]
    },
    "lint:js": {
      "outputs": []
    },
    "lint:lint-staged": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["transit", "@repo/vitest-config#build"]
    },
    "coverage": {
      "dependsOn": ["transit", "@repo/vitest-config#build"],
      "outputs": ["coverage/**"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "e2e": {
      "outputs": ["test-results/**"],
      "env": ["PLAYWRIGHT_BROWSERS_PATH"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
